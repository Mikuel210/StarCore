<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:StarCore"
             x:Class="StarCore.App"
             RequestedThemeVariant="Default">
             
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
             
    <Application.Resources>
        <!-- Create font resource -->
        <FontFamily x:Key="MainFont">avares://StarCore/Assets/Fonts#Funnel Display</FontFamily>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme/>
        
        <!-- Set default font -->
        <Style Selector=":is(TopLevel)">
            <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
        </Style>
        
        <!-- Define button colors -->
        <Style Selector="Button.danger">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#C62828"/>
        </Style>
        <Style Selector="Button.danger:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#B71C1C"/>
        </Style>
        <Style Selector="Button.danger:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#8E0000"/>
        </Style>
    </Application.Styles>
</Application>